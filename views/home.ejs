<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="./css/EcommercePage.css" />
  </head>

  <body>
    <div class="nav">
      <input type="checkbox" id="nav-check" />
      <div class="nav-header">
        <div class="nav-title">Online mobile Store</div>
      </div>
      <div class="nav-btn">
        <label for="nav-check">
          <span></span>
          <span></span>
          <span></span>
        </label>
      </div>

      <div class="nav-links">
        <a href="/">Home</a>
        <a href="">Sell Mobile</a>
        <a href="/login">Customer Login</a>
      </div>
    </div>
    <div class="main">
      <h1>Welcome to online mobile store</h1>

      <div class="slideshow-container">
        <div class="mySlides fade">
          <div class="numbertext">1 / 3</div>
          <img
            src="https://www.refurb-phone.com/image/cache/catalog/mobile.phones.long.banner-1170x270-1170x270.jpg"
            style="width: 100%"
          />
        </div>

        <div class="mySlides fade">
          <div class="numbertext">2 / 3</div>
          <img
            src="https://lh3.googleusercontent.com/proxy/vhww28k8DGMpPpSQEDZ0GYrBOFcGs6jD5KItG-A4EiWM09OYas-QQJP8R2TztrqTpg1n1ZqMTmC6xQEn5q_Nuvf9jwPR3VNIcyX5nVzo7A-8swiiSej7ZUqe"
            style="width: 100%"
          />
        </div>

        <div class="mySlides fade">
          <div class="numbertext">3 / 3</div>
          <img
            src="https://www.annfone.com/img/cms/mobiles-phones-banner.png"
            style="width: 100%"
          />
        </div>
      </div>
      <br />

      <div style="text-align: center">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>

      <ul class="cards">
        <% if (products.length > 0) { %> <% for (let product of products) { %>
        <li class="cards_item">
          <div class="card">
            <div class="card_image"><img src="<%= product.imagelink %>" /></div>
            <div class="card_content">
              <h2 class="card_title"><%= product.name %></h2>
              <p class="card_text">â‚¹ <%= product.cost %></p>
              <form action="/login">
                <button class="btn card_btn" type="submit">Buy Now</button>
              </form>
            </div>
          </div>
        </li>
        <% } %> <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
      </ul>
    </div>
  </body>
  <script src="./js/EcommercePage.js"></script>
</html>
