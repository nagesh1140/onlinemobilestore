<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="./css/EcommercePage.css" />
    <link rel="stylesheet" href="./css/admin.css" />
  </head>

  <body>
    <div class="nav">
      <input type="checkbox" id="nav-check" />
      <div class="nav-header">
        <div class="nav-title">Online mobile Store</div>
      </div>
      <div class="nav-btn">
        <label for="nav-check">
          <span></span>
          <span></span>
          <span></span>
        </label>
      </div>

      <div class="nav-links">
        <a href="addproduct">Add Product</a>
        <a href="/AdminPage">User Reports</a>
        <a href="/MobileReports">Mobile reports</a>
        <a href="/Adminlogin">Logout</a>
      </div>
    </div>
    <div class="main">
      <h1>Welcome to online mobile store</h1>

      <div class="slideshow-container">
        <div class="mySlides fade">
          <div class="numbertext">1 / 3</div>
          <img
            src="https://www.refurb-phone.com/image/cache/catalog/mobile.phones.long.banner-1170x270-1170x270.jpg"
            style="width: 100%"
          />
        </div>

        <div class="mySlides fade">
          <div class="numbertext">2 / 3</div>
          <img
            src="https://i.pinimg.com/originals/ca/e7/2c/cae72ce86998abcadd5051acd91a696b.jpg"
            style="width: 100%"
          />
        </div>

        <div class="mySlides fade">
          <div class="numbertext">3 / 3</div>
          <img
            src="https://www.annfone.com/img/cms/mobiles-phones-banner.png"
            style="width: 100%"
          />
        </div>
      </div>
      <br />

      <div style="text-align: center">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>

      <form class="form-inline" action="" style="margin-left: 42%">
        <button>Mobile Reports</button>
      </form>
    </div>

    <table style="margin-top: 2%">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Product Name</th>
        <th>Product Cost</th>
      </tr>
      <% if (details.length > 0) { %> <%
      details.reverse().forEach(function(detail){ %>
      <tr>
        <td><%= detail.firstname %></td>
        <td><%= detail.email %></td>
        <td><%= detail.productname %></td>
        <td><%= detail.productcost %></td>
      </tr>
      <% }) %> <% } else { %>
      <h1>No Details Found!</h1>
      <% } %>
    </table>
  </body>
  <script src="./js/EcommercePage.js"></script>
</html>
